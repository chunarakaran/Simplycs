<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/gradient_yellow">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/login_logo"
            />

        <customfonts.MyTextView_Roboto_Black
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sofia_regular"
            android:text="Register"
            android:textStyle="normal"
            android:textSize="30dp"
            android:layout_marginTop="-60dp"
            android:layout_marginLeft="-100dp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="140dp"
            android:background="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/maven_pro_medium"
                    android:text="Select Course"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_grayoutline1"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <Spinner
                        android:id="@+id/course_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/maven_pro_medium"
                    android:text="Full Name"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_grayoutline1"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <EditText
                        android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15.4sp" />
                </LinearLayout>

                <TextView
                    android:fontFamily="@font/maven_pro_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Mobile"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_grayoutline1"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <EditText
                        android:id="@+id/input_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15.4sp" />
                </LinearLayout>

                <TextView
                    android:fontFamily="@font/maven_pro_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Email"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_grayoutline1"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15.4sp" />
                </LinearLayout>


                <TextView
                    android:fontFamily="@font/maven_pro_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Password"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_grayoutline1"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <EditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15.4sp" />
                </LinearLayout>

                <TextView
                    android:fontFamily="@font/maven_pro_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Confirm Password"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_grayoutline1"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <EditText
                        android:id="@+id/input_ConfPass"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15.4sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/sign_up"
                    android:fontFamily="@font/maven_pro_bold"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rect_yellow1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="15sp" />



            </LinearLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>


</RelativeLayout>