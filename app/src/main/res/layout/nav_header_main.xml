<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.alexzh.circleimageview.CircleImageView
        android:id="@+id/banar1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="3dp"


        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:view_backgroundColor="@color/windowBackground"
        app:view_shadowRadius="2dp"
        app:view_shadowDx="2dp"
        app:view_shadowDy="0dp"
        android:layout_gravity="center_horizontal"
        app:view_borderWidth="4dp"
        app:view_borderColor="@color/windowBackground"

        />


    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Simply-cs"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />



</LinearLayout>
