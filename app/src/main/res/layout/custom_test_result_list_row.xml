<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_expand_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <WebView
            android:id="@+id/txt_quetion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginTop="5dp"
            android:background="@color/grey_5"
            android:gravity="center_vertical"
            android:textColor="@color/grey_80"
            tools:ignore="WebViewLayout" />

        <LinearLayout
            android:id="@+id/liOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space10"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="@dimen/material_global_margin_8"
                    android:src="@drawable/ic_circle_gray" />

                <TextView
                    android:id="@+id/tvOption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img1"
                    android:text="Option1"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space5">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="@dimen/material_global_margin_8"
                    android:src="@drawable/ic_circle_gray" />

                <TextView
                    android:id="@+id/tvOption2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img2"
                    android:text="Option2"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space5">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="@dimen/material_global_margin_8"
                    android:src="@drawable/ic_circle_gray" />

                <TextView
                    android:id="@+id/tvOption3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img3"
                    android:text="Option3"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space5">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="@dimen/material_global_margin_8"
                    android:src="@drawable/ic_circle_gray" />

                <TextView
                    android:id="@+id/tvOption4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img4"
                    android:text="Option4"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>